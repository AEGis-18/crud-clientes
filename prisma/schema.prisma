generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  //Cambiar a cuid
  id            String   @id @default(uuid())
  //agregar CI
  nombre        String
  apellido      String
  segundo_apellido String?
  email         String @unique
  estado        Boolean 
  fechaCreacion DateTime @default(now())
  fechaActualizacion DateTime @updatedAt
  //TODO: agregar opcionales...
}
